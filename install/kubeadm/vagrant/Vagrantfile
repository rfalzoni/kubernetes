# -*- mode: ruby -*-
# vi:set ft=ruby sw=2 ts=2 sts=2:

ENV['VAGRANT_DEFAULT_PROVIDER'] = 'libvirt'

# Define the number of master and worker nodes
# If this number is changed, remember to update setup-hosts.sh script with the new hosts IP details in /etc/hosts of each VM.
MASTER_NODES_COUNT = 1
WORKER_NODES_COUNT = 2

IP_NETWORK = "192.168.5."
MASTER_IP_START = 10
NODE_IP_START = 20
NETWORK_DEVICE_NAME = "eth1"

Vagrant.configure("2") do |config|
  config.vm.box = "generic/ubuntu1804"
  config.vm.box_check_update = false

  # Load Balancer
  config.vm.define "loadbalancer" do |node|
    node.vm.provider "libvirt" do |vb|
        vb.memory = 512
        vb.cpus = 1
    end
    node.vm.hostname = "loadbalancer"
    node.vm.network :private_network, ip: "#{IP_NETWORK}" + "#{MASTER_IP_START}"
	  node.vm.network "forwarded_port", guest: 22, host: 2730

    node.vm.provision "setup-hosts-file", :type => "shell", :path => "ubuntu/vagrant/setup-hosts.sh" do |s|
      s.args = ["#{NETWORK_DEVICE_NAME}"]
    end

    #node.vm.provision "install-guest-additions", type: "shell", :path => "ubuntu/vagrant/install-guest-additions.sh"
    node.vm.provision "update-system-config", type: "shell", :path => "ubuntu/update-config.sh"
    node.vm.provision "update-dns-config", type: "shell", :path => "ubuntu/update-dns.sh"
    node.vm.provision "update-system", type: "shell", :path => "ubuntu/update-system.sh"
    node.vm.provision "install-haproxy", type: "shell", :path => "ubuntu/install-haproxy.sh"

  end

  # Master Nodes - Control Plane
  (1..MASTER_NODES_COUNT).each do |i|
      config.vm.define "master-#{i}" do |node|
        node.vm.provider "libvirt" do |vb|
            vb.memory = 2048
            vb.cpus = 2
        end
        node.vm.hostname = "master-#{i}"
        node.vm.network :private_network, ip: "#{IP_NETWORK}" + "#{MASTER_IP_START + i}"
        node.vm.network "forwarded_port", guest: 22, host: "#{2730 + i}"

        node.vm.provision "setup-hosts-file", :type => "shell", :path => "ubuntu/vagrant/setup-hosts.sh" do |s|
          s.args = ["#{NETWORK_DEVICE_NAME}"]
        end

        #node.vm.provision "install-guest-additions", type: "shell", :path => "ubuntu/vagrant/install-guest-additions.sh"
        node.vm.provision "update-system-config", type: "shell", :path => "ubuntu/update-config.sh"
        node.vm.provision "update-dns-config", type: "shell", :path => "ubuntu/update-dns.sh"
        node.vm.provision "update-system", type: "shell", :path => "ubuntu/update-system.sh"
        node.vm.provision "install-docker", type: "shell", :path => "ubuntu/install-docker.sh"
      end
  
  end

  # Worker Nodes
  (1..WORKER_NODES_COUNT).each do |i|
      config.vm.define "worker-#{i}" do |node|
        node.vm.provider "libvirt" do |vb|
            vb.memory = 2048
            vb.cpus = 2
        end
        node.vm.hostname = "worker-#{i}"
        node.vm.network :private_network, ip: "#{IP_NETWORK}" + "#{NODE_IP_START + i}"
        node.vm.network "forwarded_port", guest: 22, host: "#{2740 + i}"

        node.vm.provision "setup-hosts-file", :type => "shell", :path => "ubuntu/vagrant/setup-hosts.sh" do |s|
          s.args = ["#{NETWORK_DEVICE_NAME}"]
        end

        #node.vm.provision "install-guest-additions", type: "shell", :path => "ubuntu/vagrant/install-guest-additions.sh"
        node.vm.provision "update-system-config", type: "shell", :path => "ubuntu/update-config.sh"
        node.vm.provision "update-dns-config", type: "shell", :path => "ubuntu/update-dns.sh"
        node.vm.provision "update-system", type: "shell", :path => "ubuntu/update-system.sh"
        node.vm.provision "install-docker", type: "shell", :path => "ubuntu/install-docker.sh"        
        
        node.vm.provision "shell", run: "always",
          inline: "ip route add 10.96.0.0/16 dev #{NETWORK_DEVICE_NAME} src #{IP_NETWORK}#{NODE_IP_START + i}"
      end
  
  end
  
end
