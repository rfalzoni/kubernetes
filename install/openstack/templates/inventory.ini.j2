[masters]
{% for server in servers.keys() %}
{% if servers[server].type == 'master' %}
{{ server }} ansible_host={{ servers[server].ip }}
{% endif %}
{% endfor %}

[nodes]
{% for server in servers.keys() %}
{% if servers[server].type == 'node' %}
{{ server }} ansible_host={{ servers[server].ip }}
{% endif %}
{% endfor %}

[all:vars]
ansible_user=centos
ansible_become=yes
